{
  "entities": {
    "Report": {
      "title": "Report",
      "description": "Represents a report submitted by a user.",
      "type": "object",
      "properties": {
        "category": {
          "type": "string",
          "description": "The category of the report (e.g., 'to-01')."
        },
        "formData": {
          "type": "object",
          "description": "The data from the form, which can vary."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the report was created."
        }
      },
      "required": ["category", "formData", "createdAt"]
    },
    "Note": {
      "title": "Note",
      "description": "Represents a user-created note in the notepad.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the note."
        },
        "content": {
          "type": "string",
          "description": "The main content of the note."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the note was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the note was last updated."
        }
      },
      "required": ["title", "content", "createdAt", "updatedAt"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/reports/{reportId}": {
      "schema": {
        "$ref": "#/backend/entities/Report"
      },
      "description": "Stores individual reports."
    },
    "/notes/{noteId}": {
      "schema": {
        "$ref": "#/backend/entities/Note"
      },
      "description": "Stores user notes for the notepad."
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to reports
    match /reports/{reportId} {
      allow read, write: if true;
    }
     match /reports {
      allow list: if true;
    }

    // Allow public read/write access to notes
    match /notes/{noteId} {
      allow read, write: if true;
    }
  }
}

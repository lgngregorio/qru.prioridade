
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // --- User Profile Rules ---
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // --- Report Rules ---
    match /reports/{reportId} {
      // Users can only create reports for themselves.
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      
      // Only the owner of a report can read, update, or delete it.
      allow read, update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }
    
    // Allow a user to list ONLY their own reports by filtering on uid.
    // Deny broad collection queries.
    match /reports/{reportId} {
      allow list: if isSignedIn() && request.query.where.field == "uid" && request.query.where.value == request.auth.uid;
    }
  }
}


rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
        return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }

    function isOwnerOrAdmin(userId) {
        return isOwner(userId) || isAdmin();
    }
    
    // --- User Profile Rules ---
    match /users/{userId} {
      // Any signed-in user can read/write their own profile.
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // --- Report Rules ---
    match /reports/{reportId} {
        // Users can create any report, as long as the 'uid' field matches their own auth uid.
        allow create: if request.resource.data.uid == request.auth.uid;
        
        // Users can only read, update, or delete reports they own. Admins can do anything.
        allow read, update, delete: if isOwner(resource.data.uid) || isAdmin();

        // Queries (list) must include a 'where('uid', '==', request.auth.uid)' clause, unless the user is an admin.
        allow list: if (isAdmin() || (request.query.resource.data.uid == request.auth.uid));
    }
  }
}
